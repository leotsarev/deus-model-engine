{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "declaration": true,
        "outDir": "./lib"
    },
    "include": ["./src/**/*.ts"]
}
